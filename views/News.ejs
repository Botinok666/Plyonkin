		================================================== -->
		<script src="/scripts/jquery-3.2.1.min.js"></script>
		<script src="/scripts/pace.min.js"></script>
		<script src="/scripts/main.js"></script>
		<script src="/scripts/client.js"></script>
		<script>
			var tID = <%= tID %>;
		</script>
	</head>
	<body onload='myLoad(tID)'>

		<div class="logo">
			<% include header %>
		</div>

			<div class="container-fluid">
				<div class="row">
					<div class="col-lg-3 col-md-1"></div>
					<div class="col-lg-6 col-md-10 col-sm-12">
						<div class="column">
							<div id='tContent' class="content">
							<%- include(title) %>
							</div>
							<p id='loginarea'>Jackety-jack</p>
							<p id='comments'></p>
							<textarea id="textfield" name="textfield" type="text" rows="8" columns="32"
							placeholder="Напечатайте свой комментарий здесь..."></textarea>
							<br>
							<button id="sendBtn" onclick='postComm(tID)' disabled>Отправить</button>
						</div>
					</div>
					<div class="col-lg-3 col-md-1"></div>
				</div>
			</div>
		<% include footer %>
</body>

